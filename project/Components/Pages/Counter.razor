@page "/counter"
@rendermode InteractiveServer
@using MudBlazor

<PageTitle>Counter</PageTitle>

<MudText Typo="Typo.h3" GutterBottom="true">Counter</MudText>

<MudText Typo="Typo.h5" Color="Color.Primary" role="status">Current count: @currentCount</MudText>

<MudButton Color="Color.Primary" Variant="Variant.Filled" OnClick="IncrementCount" Class="mt-4">Click me</MudButton>

@code {
    private int currentCount = 0;

    private void IncrementCount()
    {
        currentCount++;
    }
}